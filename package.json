    "reinstall": "yarn clean && yarn install",
    "clean:all": "npx rimraf \"**/{node_modules,dist,yarn.lock}\"",
    "clean:dist": "npx rimraf \"**/{dist}\""
  },
  "devDependencies": {
    "glob": "^7.1.6"
  },
  "workspaces": [
    "packages/*"
  ]
}
