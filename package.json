{
  "name": "@kraken.js/kraken.js",
  "version": "0.0.3",
  "private": true,
  "license": "MIT",
  "author": "@kraken.js",
  "repository": "github:kraken-js/kraken.js",
  "scripts": {
    "package": "yarn workspaces run package",
    "test": "yarn workspaces run test",
    "pre:release": "scripts/prepare-release.sh",
