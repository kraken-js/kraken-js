{
  "name": "@kraken.js/cli",
  "version": "0.0.6",
  "description": "Kraken CLI",
  "author": "@kraken.js",
  "repository": "github:kraken-js/kraken.js",
  "types": "dist/types/types.d.ts",
  "bin": {
    "kraken": "bin/kraken"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,json}",
    "lint": "tslint -p .",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./dist/; fi",
    "package": "yarn clean && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn package",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "dist",
    "LICENSE",
    "README.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "gluegun": "4.6.1",
    "import-cwd": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.2",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^4.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "printWidth": 120
  }
}
