{
  "compilerOptions": {
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2019"],
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": ".build"
  },
  "exclude": ["node_modules"]
}
